
<div class = "container m-4">

  <% if @song.photo.key? %>
    <%= cl_image_tag @song.photo.key, height: 400, width: 300, crop: :fill %>
  <% end %>

<p>
<strong>Title:</strong>
<%= @song.title %>
</p>
<p>
<strong>Artist:</strong>
<%= @song.artist %>
</p>
<p>
<strong>Album:</strong>
<%= @song.album %>
</p>
<p>
<strong>Release year:</strong>
<%= @song.release_year %>
</p>
<p>
<strong>Price per day:</strong>
<%= @song.price %>
</p>
<p>
<strong>Owner:</strong>
<%= @song.user.first_name %> <%= @song.user.last_name %></p>
</p>


<%# <%= link_to "Rent this song",  "#", :class => "btn btn-primary"%>
<div>
    <%= simple_form_for [@song,@booking] do |f| %>
    <div>
      <%= f.input :start_date,
      as: :string,
      input_html: { data: { controller: "datepicker" } }
      %>
      <%= f.input :end_date,
      as: :string,
      input_html: { data: { controller: "datepicker" } }
      %>
    </div>
      <%= link_to "Back to all songs", songs_path, :class => "btn btn-secondary"%>
      <%= f.button :submit, "Rent", class: "btn btn-primary" %>

    <% end %>
</div>

</div>
