
<div class = "container mx-auto my-4">
  <div class ="card-tune">
    <div class="card-tune-infos">
      <% if @song.photo.key? %>
        <%= cl_image_tag @song.photo.key, height: 400, width: 400, crop: :fill %>
      <% end %>
      </div>
      <div class="row">
        <h2><%= @song.title %> - <%= @song.release_year %> </h2>
        <div class="col">
          <p><strong>Artist:</strong> <%= @song.artist %></p>
          <p> <strong>Album:</strong> <%= @song.album %> </p>
        </div>
        <div class="col">
        <p><strong>Price per day:</strong> £<%= @song.price %></p>
        <p><strong>Owner:</strong> <%= @song.user.first_name %> <%= @song.user.last_name %></p></p>
        </div>
        <div> <strong>Blur:</strong> Lorem Ipsum is simply dummy text of the printing and typesetting industry.
        Lorem Ipsum has been the industry's standard dummy text ever since the 1500s</div>
    </div>
  </div>

  <% if @song.photo.key? %>
    <%= cl_image_tag @song.photo.key, height: 400, width: 300, crop: :fill %>
  <% end %>

<p>
